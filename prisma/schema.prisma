generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Oil {
  id        Int        @id @default(autoincrement())
  SAP       String
  NAOH      Float
  KOH       Float
  names     Name[]
  INCIName  INCIName[]
  updatedBy String?
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Name {
  id       Int    @id @default(autoincrement())
  oilId    Int
  language String
  name     String
  oil      Oil    @relation(fields: [oilId], references: [id], onDelete: Cascade)
}

model INCIName {
  id       Int    @id @default(autoincrement())
  oilId    Int
  language String
  name     String
  oil      Oil    @relation(fields: [oilId], references: [id], onDelete: Cascade)
}
